<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".activity.LoginActivity">
    <TextView
        android:id="@+id/loginTitle"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="ĐĂNG NHẬP"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
        android:id="@+id/loginUsernameValue"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:hint="tai khoan"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/loginTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
        android:id="@+id/loginPasswordValue"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:hint="mau khau"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/loginUsernameValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:layout_marginTop="60dp"
        android:text="login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginPasswordValue"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="Register here"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>